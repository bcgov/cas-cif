{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Milestone",
    "required": ["description", "reportType", "reportDueDate"],
    "properties": {
      "description": {
        "type": "string",
        "title": "Milestone Description"
      },
      "reportType": {
        "type": "string",
        "title": "Milestone Type"
      },
      "hasExpenses": {
        "type": "boolean"
      },
      "reportDueDate": {
        "type": "string",
        "title": "Report Due Date"
      },
      "submittedDate": {
        "type": "string",
        "title": "Received Date"
      },
      "substantialCompletionDate": {
        "type": "string",
        "title": "Substantial Completion Date"
      },
      "certifiedBy": {
        "type": "string",
        "title": "Certifier"
      },
      "certifierProfessionalDesignation": {
        "type": "string",
        "title": "Professional Designation",
        "default": "Professional Engineer"
      }
    },
    "dependencies": {
      "hasExpenses": {
        "oneOf": [
          {
            "properties": {
              "hasExpenses": {
                "const": false
              }
            }
          },
          {
            "properties": {
              "hasExpenses": {
                "const": true
              },
              "maximumAmount": {
                "type": "number",
                "title": "Maximum Amount"
              },
              "totalEligibleExpenses": {
                "type": "number",
                "title": "Total Eligible Expenses"
              },
              "calculatedGrossAmount": {
                "type": "number",
                "title": "Calculated Milestone Gross Payment Amount"
              },
              "calculatedNetAmount": {
                "type": "number",
                "title": "Calculated Milestone Net Payment Amount"
              },
              "adjustedGrossAmount": {
                "type": "number",
                "title": "Milestone Gross Payment Amount"
              },
              "adjustedNetAmount": {
                "type": "number",
                "title": "Milestone Net Payment Amount"
              },
              "dateSentToCsnr": {
                "type": "string",
                "title": "Date sent to CSNR"
              }
            },
            "required": ["maximumAmount"]
          }
        ]
      }
    }
  }
}
