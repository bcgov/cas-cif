{
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Operator",
    "required": ["legalName", "tradeName"],
    "properties": {
      "legalName": {
        "type": "string",
        "title": "Legal Name"
      },
      "tradeName": {
        "type": "string",
        "title": "Trade Name"
      },
      "bcRegistryId": {
        "type": "string",
        "title": "BC Registry ID",
        "pattern": "^[a-zA-Z]{1,3}[0-9]{7}$"
      },
      "operatorCode": {
        "type": "string",
        "title": "Operator Code",
        "pattern": "^[A-Z]{4}$"
      }
    }
  }
}
